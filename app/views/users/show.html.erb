<div class="container">
  <div class="row">
    <div class="mx-auto">
      <% @user.questions.each do |question| %>
        <p><%= question.theme %>
          <%= link_to "削除", question_path(question), method: :delete, data: {confirm: "削除しますか?"},class: "btn btn-outline-primary" %>
          <%=link_to "編集", edit_question_path(question), class: "btn btn-outline-primary" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
